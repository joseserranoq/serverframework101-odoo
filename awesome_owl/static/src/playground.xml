<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <t t-name="awesome_owl.playground">
        <div>
            <h1>Owl Playground</h1>
            <Counter/>
            <Counter/>
            <Card title="title1" content="content1" />
            <Card title="title2" content="content2" />
        </div>
    </t>
    <t t-name="awesome_owl.counter">
        <div>
            <p>Counter: <t t-esc="count.value"/></p>
            <button class="btn btn-primary" t-on-click="increment">Increment</button>
        </div>
    </t>

    <t t-name="awesome_owl.card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><t t-esc="props.title"/></h5>
                <p class="card-text"><t t-out="props.content"/></p>
            </div>
        </div>
    </t>
    
</templates>